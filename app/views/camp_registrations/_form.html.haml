= form_for(@camp_registration) do |f|
  - if @camp_registration.errors.any?
    #error_explanation
      %h2
        = pluralize(@camp_registration.errors.count, "error")
        prohibited this camp_registration from being saved:
      %ul
        - @camp_registration.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :age
    %br/
    = f.text_field :age, :size => 2
  .field
    = f.label :position
    %br/
    = f.text_field :position
  .field
    = f.label :school
    %br/
    = f.text_field :school
  .field
    = f.label :comments
    %br/
    = f.text_area :comments, :rows => "10", :cols => "50"
  .actions
    = f.submit "Register and Pay Now"

    = "NOTE: After successful registration you will automatically be redirected to PayPal."
