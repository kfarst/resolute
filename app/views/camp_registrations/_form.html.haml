= form_for @camp_registration, :url => camp_registrations_path(@camp_registration) do |f|
  - if @camp_registration.errors.any?
    #error_explanation
      %h2
        = pluralize(@camp_registration.errors.count, "error")
        prohibited this Camp Registration from being saved:
      %ul
        - @camp_registration.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :age
    %br/
    = f.text_field :age, :size => 2
  .field
    = f.label :position
    %br/
    = f.check_box :position, "Attack"
    = f.check_box :position, "Middle"
    = f.check_box :position, "Defense"
    = f.check_box :position, "Goalie"
  .field
    = f.label :school
    %br/
    = f.text_field :school
  .field
    = f.label :phone
    %br/
    = f.text_field :phone, :size => 14
  .field
    = f.label :street_address
    %br/
    = f.text_field :street_address
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :state
    %br/
    = f.select :state
  .field
    = f.label :zip
    %br/
    = f.text_field :zip, :size => 5
  .field
    = f.label :grade
    %br/
    = f.text_field :grade, :size => 2
  .field
    = f.label :yrs_of_exp
    %br/
    = f.text_field :yrs_of_exp, :size => 2
  .field
    = f.label :finding_resolute
    %br/
    = f.text_field :finding_resolute
  .field
    = f.label :comments
    %br/
    = f.text_area :comments, :rows => "10", :cols => "50"
  .actions
    = f.submit "Register and Pay Now"

    .clear= "NOTE: After successful registration you will automatically be redirected for payment."
