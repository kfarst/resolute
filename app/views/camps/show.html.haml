#title= @camp.name

%p#notice= notice

= image_tag @camp.get_map, :id => "map"

%b Location:
%br/
= street_address(@camp)
%p
  %b Starts at:
  = formatted_datetime(@camp.start_at)
%p
  %b Ends at:
  = formatted_datetime(@camp.end_at)
%p
  %b Cost:
  = number_to_currency(@camp.cost)
%p
  = raw @camp.description

%h2 Camp Registration
= render :partial => "camp_registration/form", :object => @camp

= render :partial => "admin/admin_links"
