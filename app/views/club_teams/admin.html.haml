#title Club Teams

%table{:width => "100%"}
  %thead
    %th Name
    %th
    %th
    %th
  %tbody
    - @club_teams.each do |club_team|
      %tr{:style => "margin: 10px 0 10px 0;"}
        %td= raw "<b>#{club_team.name}</b>"
        %td= link_to 'Show', "/club_teams/#{club_team.slug}"
        %td= link_to 'Edit', edit_club_team_path(club_team)
        %td= link_to 'Destroy', club_team, :confirm => 'Are you sure?', :method => :delete
      - club_team.children.each do |child|
        %tr
          %td= child.name
          %td= link_to 'Show', "/club_teams/#{club_team.slug}/#{child.slug}"
          %td= link_to 'Edit', edit_club_team_path(child)
          %td= link_to 'Destroy', club_team, :confirm => 'Are you sure?', :method => :delete
  %br/
%br/
= link_to 'New Club Team', new_club_team_path
