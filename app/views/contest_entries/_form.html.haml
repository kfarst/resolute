= form_for @contest_entry do |f|
  - if @contest_entry.errors.any?
    #error_explanation
      %h2
        = pluralize(@contest_entry.errors.count, "error")
        prohibited this contest entry from being saved:
      %ul
        - @contest_entry.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :age
    %br/
    = f.text_field :age, :size => 2
  .field
    = f.label :school
    %br/
    = f.text_field :school
  .field
    = f.label :position
    %br/
    = f.text_field :position

  .actions
    = f.submit "Enter Contest"
