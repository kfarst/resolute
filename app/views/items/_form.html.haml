= form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :type
    %br
    = f.text_field :type
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :body
    %br
    = f.cktext_area :body

  - unless @item.type == "Page"
    .field
      = f.label "Category"
      %br
      = f.collection_select :page, :category_id, Category.find(:all), :id, :title, :prompt => true 

  .actions
    = f.submit
