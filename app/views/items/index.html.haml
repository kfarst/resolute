#title
  Listing items

%ul#sortable{:width => "100%"}
  - @items.each do |item|
    %li{:id => "item_#{item.id}"}
      %div.sort-item= item.title
      %div#actions
        %div.sort-item{:style => "color: gray;"}= item.category.title if is_page?(item)
        %div.sort-item= link_to 'Show', polymorphic_path(item)
        %div.sort-item= link_to 'Edit', edit_polymorphic_path(item, :type => get_type_from_position(2).capitalize)
        %div.sort-item= link_to 'Destroy', polymorphic_path(item), :confirm => 'Are you sure?', :method => :delete
%br
= link_to 'New Item', new_polymorphic_path(get_type_from_position(2).singularize)
|
= link_to 'Admin Home', admin_path
