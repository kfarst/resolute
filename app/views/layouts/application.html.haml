!!!
%html
  %head
    %title 
      Resolute
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults, "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"#, :ckeditor
    = csrf_meta_tag
  %body
    #container
      #header 
        %span.logo 
          Resolute Lacrosse
        %br
        %span.tagline 
          Be Resolute.
        #nav
          %ul.nav_links
            - Category.all.each do |category|
              %li.first_level
                = link_or_dropdown category 
                %ul.second_level
                  - category.pages.each do |page| 
                    - unless category.less_than_two_pages?
                      %li
                        = link_to page.title, pretty_url_path(page)
      #content
        = yield
