= form_tag({:action => "updating"}, { :multipart => true }) do
  - @panels.each_with_index do |panel, index|
    %hr{:width => "100%"}
      = fields_for "panels[#{index}]", panel do |f|
        %fieldset
          %legend
            %b= Panel::POSITION[index]
          - if panel.errors.any?
            #error_explanation
              %h2
                = pluralize(panel.errors.count, "error")
                prohibited this panel from being saved:
              %ul
                - panel.errors.full_messages.each do |msg|
                  %li= msg
          .field
            = f.hidden_field :position
          .field
            = f.label :title
            %br/
            = f.text_field :title
          .field
            = f.label :url
            %br/
            = f.text_field :url
          .field
            = f.label :panel
            %br/
            = f.file_field :panel
          .field
            = f.label :summary
            %br/
            = f.text_area :summary, :size => "50x5"
          .field
            = f.label :position
            %br/
            = f.select :position, Panel::POSITION.collect{|position| [position, position]}, {:include_blank => true}
  .actions
    = submit_tag "Update"
