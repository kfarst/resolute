= form_for(@resolute_team_sign_up) do |f|
  - if @resolute_team_sign_up.errors.any?
    #error_explanation
      %h2
        = pluralize(@resolute_team_sign_up.errors.count, "error")
        prohibited you from being signed up:
      %ul
        - @resolute_team_sign_up.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :age
    %br/
    = f.text_field :age, :size => 2
  .field
    = f.label :school
    %br/
    = f.text_field :school
  .field
    = f.label :position
    %br/
    = f.text_field :position
  .actions
    = f.submit "Sign Up Now!"
