= form_for(@staff_member) do |f|
  - if @staff_member.errors.any?
    #error_explanation
      %h2
        = pluralize(@staff_member.errors.count, "error")
        prohibited this staff member from being saved:
      %ul
        - @staff_member.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :stats
    %br/
    -# = @staff_member.stats_array.each_with_index do |stat, index|
    -#   = f.text_field_tag :stats, {:name => "staff_member[stats][#{index + 1}]"}
    -#   = link_to "Remove", "#", {:id => "stat_field"}
    -#   %br/
    -# %br/
    = f.text_field :stats
    -# = link_to "Add Stat", "#", {:name => "staff_member[stats][0]"}
  .field
    = f.label :bio
    %br/
    = f.cktext_area :bio, :width => "80%", :height => "600px"
  .field
    = f.label :profile_picture
    %br/
    = f.file_field :profile_picture
    %br/

  .actions
    = f.submit
