= form_for(@tournament_page) do |f|
  - if @tournament_page.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@tournament_page.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @tournament_page.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :body
    %br
    = f.text_area :body
  .field
    = f.label :slug
    %br
    = f.text_field :slug
  .field
    = f.label :position
    %br
    = f.text_field :position

  .actions
    = f.submit
