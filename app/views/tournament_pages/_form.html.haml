= form_for(@tournament_page) do |f|
  - if @tournament_page.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@tournament_page.errors.count, 'error')} prohibited this tournament page from being saved:"
      %ul
      - @tournament_page.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :body
    %br
    = f.cktext_area :body, :width => "80%", :height => "600px"
  .actions
    = f.submit
